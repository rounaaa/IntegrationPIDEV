<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.StartController"
            prefHeight="200.0" prefWidth="400.0">

    <Text text="Choose Your Role" style="-fx-font-size: 24px;" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="100.0"/>

    <HBox spacing="20" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="100.0">
        <Button text="Admin" onAction="#handleAdminButton" style="-fx-background-color: #16A085CC; -fx-text-fill: white;"/>
