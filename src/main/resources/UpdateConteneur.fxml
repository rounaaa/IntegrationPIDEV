<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ModifierConteneurController">

    <Label text="Localisation :" layoutX="20" layoutY="20"/>
    <TextField fx:id="tfLocalisation" layoutX="120" layoutY="20" editable="false"/>

    <Label text="Capacité :" layoutX="20" layoutY="60"/>
    <TextField fx:id="tfCapacite" layoutX="120" layoutY="60"/>

    <Label text="État :" layoutX="20" layoutY="100"/>
    <ComboBox fx:id="cbEtat" layoutX="120" layoutY="100"/>

    <Label text="Avec Capteur :" layoutX="20" layoutY="140"/>
    <CheckBox fx:id="chkAvecCapteur" layoutX="120" layoutY="140"/>

    <Label text="Niveau de remplissage :" layoutX="20" layoutY="180"/>
    <TextField fx:id="tfNivRemplissage" layoutX="180" layoutY="180"/>

    <Button text="Mettre à jour" fx:id="btnUpdate" layoutX="120" layoutY="220" onAction="#mettreAJourConteneur"/>
</AnchorPane>
